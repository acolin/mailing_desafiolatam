<%= form_for(@movie, remote: true, html: {multipart: true}) do |f| %>
  <%= render 'movies/errors' %>
  <div class="field">
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %>
    <%= image_tag(@movie.photo) if @movie.photo? %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
